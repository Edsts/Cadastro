@model CadastroTeste.Models.UsuarioViewModel
@{
    <h1> Editar cadastro de usuário </h1>
    @using (Html.BeginForm("EditarUsuario", "Edicao", new { id = @Model.Id }, FormMethod.Post))
    {
        <label for="nomeCompleto">Nome Completo:</label>
        <br>
        <input type="text" id="nome" name="nome" value="@Model?.Nome" class="form-control">
        <br>
        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        <br>
        <label for="email">Email:</label>
        <br>
        <input type="email" id="email" name="email" value="@Model?.Email" class="form-control">
        <br>
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        <br>
        <label for="telefone">Telefone:</label>
        <br>
        <input type="tel" id="telefone" name="telefone" value="@Model?.Telefone" class="form-control">
        <br>
        @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
        <br>
        <label for="senha">Senha:</label>
        <br>
        <input type="password" id="senha" name="senha" value="@Model?.Senha" class="form-control">
        <br>
        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
        <br>
        <br>
        <button type="submit" class="btn btn-info">Salvar dados</button>
    }
}

